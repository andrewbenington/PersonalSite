{
    "hosting": {
        "public": "build",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "redirects": [
            {
                "source": "**/*{wp-login,wp-content,.env,.well-known,acme-challenge,.git,.tar,backup,wp,wordpress,admin,php,print}*",
                "destination": "/404.html",
                "type": 404
            }
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}
